<% if prev_page %>
  <%= link_to prev_page, remote: true do %>
    <i class="fa fa-lg fa-chevron-circle-left paging paging-left"></i>
  <% end %>
<% end %>

<% if next_page %>
  <%= link_to next_page, remote: true do %>
    <i class="fa fa-lg fa-chevron-circle-right paging paging-right"></i>
  <% end %>
<% end %>

<% if data.empty? %>
  <div class="panel-body">
    <p>No more <%= activity %> history to show.</p>
  </div>
<% end %>

<table id="<%= id %>" class="table table-striped table-responsive table-hover table-condensed">
  <tbody>
    <% data.each_with_index do |e, i| %>
      <tr class="popuppable" data-load="<%= e[:load] %>" >
        <td class="fit-to-contents first-column">
          <% unless ((e[:time].to_date == data[i - 1][:time].to_date) rescue false)  %>
            <%= e[:display_time] %>
          <% end %>
        </td>

        <td class="fit-to-contents">
          <span class="label label-<%= e[:direction] == :to ? 'danger' : 'success' %> amount"><%= e[:amount] %></span>
        </td>

        <td class="fit-to-contents">
          <% if e[:transfer_type] %>
            <%= e[:transfer_type] %>
          <% else %>
            <%= e[:direction] == :to ? '<i class="fa fa-long-arrow-right"></i>'.html_safe : '<i class="fa fa-long-arrow-left"></i>'.html_safe%>
          <% end %>
        </td>

        <td class="ellipsis">
          <div class="td-truncate">
          <%= e[:target] %>
          </div>
        </td>

        <td class="fit-to-contents last-column">
          <%=
            case e[:target_type]
            when :bitstation
              '<span title="This person is a MIT user" class="label label-danger">M</span>'
            when :coinbase
              '<span title="This person is a Coinbase user" class="label label-info">C</span>'
            when :external
              '<span title="This person is an external user" class="label label-success">E</span>'
            end.html_safe
          %>

          <% if e[:pending] %>
            <span title="This transaction is pending" class="label label-warning">P</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>